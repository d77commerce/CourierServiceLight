@model CourierService.Core.Models.Staff.WorkerModel
@{
    ViewBag.Title = "Tracking status";
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Tracking status";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />

                <div class="text-center mb-3">
                    <label asp-for="@Model.FirstName" class="form-label"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.LastName" class="form-label"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.PhoneNo" class="form-label"></label>
                    <input asp-for="@Model.PhoneNo" class="form-select" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Mail" class="form-label"></label>
                    <input asp-for="@Model.Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.BranchId" class="form-label"></label>
                    <input asp-for="@Model.BranchId" class="form-control" />
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button  type="submit" class="btn btn-primary">Change Tracking Status</button>
                </div>
            </form>
        </section>
    </div>
</div>