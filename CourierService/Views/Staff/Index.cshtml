@model CourierService.Infrastructure.Data.Models.Tracking.Status


@{
    ViewBag.Title = "Tracking status";
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Tracking status";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                
                <div class="text-center mb-3">
                    <label asp-for="@Model.TrackingId" class="form-label"></label>
                    <input asp-for="@Model.TrackingId" class="form-control" />
                    <span asp-validation-for="TrackingId" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <h4>Massage to Courier</h4>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.EnumStatus" class="form-label"></label>
                    <input asp-for="@Model.EnumStatus" class="form-select" />
                    <span asp-validation-for="EnumStatus" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Change Tracking Status</button>
                </div>
            </form>
        </section>
    </div>
</div>