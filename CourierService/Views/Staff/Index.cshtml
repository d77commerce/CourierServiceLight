@model CourierService.Infrastructure.Data.Models.Tracking.Status

@{
    ViewBag.Title = "Change Tracking status";
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Change Tracking status";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />

                <div class="text-center mb-3">
                    <label asp-for="@Model.TrackingId" class="form-label"></label>
                    <input asp-for="@Model.TrackingId" class="form-control" />
                    <span asp-validation-for="TrackingId" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <h4>Choice One of fallowing options</h4>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.EnumStatus." class="form-label"></label>

                    <select data-val="true" data-val-required="is required." asp-for="@Model.EnumStatus" class="form-select">
                        <option value="">Pick one</option>
                        <option selected="selected" value="0">New</option>
                        <option value="0">Collect</option>
                        <option value="1">In Progress</option>
                        <option value="2">InBase</option>
                        <option value="3">OnDelivery</option>
                        <option value="4">Delivered</option>
                        <span asp-validation-for="EnumStatus" class="text-danger"></span>
                    </select>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Change Tracking Status</button>
                </div>
            </form>
        </section>
    </div>
</div>