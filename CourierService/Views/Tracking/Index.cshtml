@model CourierService.Core.Models.Tracking.TrackingModel

@{
    ViewData["Title"] = "Where is My parcel ?";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.TrackingNo" class="form-label"></label>
                    <input asp-for="@Model.TrackingNo" class="form-control" />
                    <span asp-validation-for="TrackingNo" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.DeliveryPostcode" class="form-label"></label>
                    <input asp-for="@Model.DeliveryPostcode"  class="form-control" />
                    <span asp-validation-for="DeliveryPostcode" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">TRACK PARCEL</button>
                </div>
            </form>
        </section>
    </div>
</div>